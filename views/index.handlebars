    <a class="navbar-brand" href="/">Mongo Scraper</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/saved">Saved</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-danger scrape-new mx-5">SCRAPE</a>
            </li>
            <li class="nav-item">
                <a id="clear" class="btn btn-danger clear">CLEAR</a>
