<div class="container">
    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h3>Some site</h3>
        </div>
    </div>
    <div class="container-fluid review-container">
        {{#if review}}
        {{#each review}}
        <div class="card">
            <div class="card-header bg-primary">
                <h3><a class="review-link text-white" target="_blank" rel="noopener noreferrer" href="http://www.echojs.com/{{this.link}}">{{this.title}}</a><a
                        class="btn btn-success save float-right" data-id={{this._id}}>Save
                        article</a></h3>
            </div>
            <div class="card-body">{{this.brief}}</div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div id="noreview" class="alert alert-warning text-center">
                <h4>No article at this moment!</h4>
            </div>
        </div>
        {{/if}}
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-header text-center">
                <h3>What Would You Like To Do?</h3>
            </div>
            <div class="card-body text-center">
                <h4><a href="#" class="scrape-new">Try Scavanging New articles</a></h4>
                <h4><a href="/saved">Go to Saved articles</a></h4>
            </div>
        </div>
    </div>
</div>
